{
  "compose": {
    "projectName": "cliw",
    "networkName": "cliw",
    "defaultEnvironment": "development",
    "environments": [
      "development",
      "test"
    ],
    "services": [
      {
        "name": "api",
        "repositoryUrl": "github.com/kgalli/javalin-playground",
        "source": "internal",
        "environments": {
          "default": {
            "ports": [
              "3000:3000"
            ],
            "buildOrigin": {
              "source": {
                "volumes": [
                  "./javalin-playground:/usr/src/app"
                ],
                "build": {
                  "context": "./javalin-playground",
                  "dockerfile": "Dockerfile"
                }
              },
              "registry":  {
                "image": "kgalli/javalin-playground"
              }
            }
          },
          "development": {
            "environment": {
              "API_URL": "http://localhost:3000",
              "DB_HOST": "db",
              "DB_PORT": "5432",
              "DB_USER": "kgalli",
              "DB_PASSWORD": "pg",
              "DB_DATABASE": "pg",
              "DB_ENGINE": "postgresql"
            }
          },
          "test": {
            "ports": [
              "3010:3000"
            ],
            "API_URL": "http://localhost:3000",
            "DB_HOST": "db",
            "DB_PORT": "3306",
            "DB_USER": "kgalli",
            "DB_PASSWORD": "pg",
            "DB_ENGINE": "mysql"
          }
        }
      },
      {
        "name": "db",
        "repositoryUrl": "github.com/kgalli/postgres",
        "source": "external",
        "environments": {
          "default": {
            "ports": [
              "9999:5432"
            ],
            "buildOrigin": {
              "source": {
                "build": {
                  "context": "./demo",
                  "dockerfile": "Dockerfile"
                }
              },
              "registry": {
                "image": "postgres"
              }
            },
            "environment": {
              "POSTGRES_PASSWORD": "pg",
              "POSTGRES_USER": "kgalli"
            }
          },
          "development": {
          },
          "test": {
            "ports": [
              "9998:5432"
            ]
          }
        }
      }
    ]
  },
  "dbTools": {
    "environments": [
      "development",
      "production"
    ],
    "defaultEnvironment": "development",
    "dataSources": [
      {
        "name": "api",
        "environments": {
          "development": {
            "host": "127.0.0.1",
            "port": "5436",
            "user": "kgalli_us",
            "password": "kgalli_pw",
            "database": "kgalli_db",
            "engine": "postgresql",
            "readonly": false
          },
          "production": {
            "host": "127.0.0.1",
            "port": "5436",
            "user": "kgalli_us",
            "password": "kgalli_pw",
            "database": "kgalli_db",
            "engine": "postgresql",
            "readonly": true
          }
        }
      }
    ]
  }
}
