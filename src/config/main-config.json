{
  "workDir": "/Users/kgalli/dev",
  "projectName": "orchestrator",
  "networkName": "orchestrator",
  "environments": [
    "development",
    "test"
  ],
  "defaultEnvironment": "development",
  "services": [
    {
      "name": "demo",
      "repositoryUrl": "github.com/kgalli/demo",
      "source": "internal",
      "environments": {
        "default": {
          "ports": [
            "3000:3000"
          ],
          "runType": {
            "source": {
              "volumes": [
                "./demo:/usr/src/app"
              ],
              "build": {
                "context": "./demo",
                "dockerfile": "Dockerfile"
              }
            },
            "image": "kgalli/demo:0.0.1"
          },
          "environment": {
            "API_URL": "https://demo.example.com"
          }
        },
        "development": {
          "environment": {
            "API_URL": "http://localhost:3000",
            "DB_HOST": "db",
            "DB_PORT": "5432",
            "DB_USER": "kgalli",
            "DB_PASSWORD": "pg",
            "DB_ENGINE": "postgresql"
          }
        },
        "test": {
          "ports": [
            "3010:3000"
          ],
          "API_URL": "http://localhost:3000",
          "DB_HOST": "db",
          "DB_PORT": "3306",
          "DB_USER": "kgalli",
          "DB_PASSWORD": "pg",
          "DB_ENGINE": "mysql"
        }
      }
    },
    {
      "name": "postgres",
      "repositoryUrl": "github.com/kgalli/postgres",
      "source": "external",
      "environments": {
        "default": {
          "ports": [
            "9999:5432"
          ],
          "runType": {
            "source": {
              "volumes": [
                "./demo:/usr/src/app"
              ],
              "build": {
                "context": "./demo",
                "dockerfile": "Dockerfile"
              }
            },
            "image": "postgres"
          },
          "environment": {
            "POSTGRES_PASSWORD": "pg",
            "POSTGRES_USER": "kgalli"
          }
        },
        "development": {
        },
        "test": {
          "ports": [
            "9998:5432"
          ]
        }
      }
    }
  ]
}
